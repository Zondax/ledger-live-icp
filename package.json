{
  "name": "@zondax/ledger-live-icp",
  "version": "1.0.0",
  "description": "ICP ledger live integration bridge library for Ledger Live",
  "files": [
    "dist"
  ],
  "browser": "dist/browser/index.js",
  "main": "dist/cjs/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "browser": "./dist/browser/index.js",
      "default": "./dist/cjs/index.js"
    },
    "./canisterIDL": {
      "require": "./dist/cjs/canisterIDL.js",
      "browser": "./dist/browser/canisterIDL.js",
      "default": "./dist/cjs/canisterIDL.js"
    },
    "./utils": {
      "require": "./dist/cjs/utils/index.js",
      "browser": "./dist/browser/utils/index.js",
      "default": "./dist/cjs/utils/index.js"
    },
    "./agent": {
      "require": "./dist/cjs/agent.js",
      "browser": "./dist/browser/agent.js",
      "default": "./dist/cjs/agent.js"
    },
    "./nns": {
      "require": "./dist/cjs/nns.js",
      "browser": "./dist/browser/nns.js",
      "default": "./dist/cjs/nns.js"
    },
    "./neurons": {
      "require": "./dist/cjs/neurons/index.js",
      "browser": "./dist/browser/neurons/index.js",
      "default": "./dist/cjs/neurons/index.js"
    }
  },
  "scripts": {
    "build": "pnpm clean && pnpm convert:idl && node esbuild.config.mjs && pnpm copy:idl",
    "copy:idl": "cp -r idl-cjs dist/",
    "convert:idl": "bun scripts/convert-idl.ts",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "test": "jest --passWithNoTests"
  },
  "keywords": [
    "icp",
    "ledger",
    "ledger-live"
  ],
  "author": "zondax",
  "license": "Apache-2.0",
  "dependencies": {
    "@dfinity/agent": "^2.4.1",
    "@dfinity/candid": "^2.4.1",
    "@dfinity/identity-secp256k1": "^2.4.1",
    "@dfinity/ledger-icp": "^2.6.13",
    "@dfinity/nns": "^8.4.1",
    "@dfinity/principal": "^2.4.1",
    "@dfinity/utils": "^2.13.0",
    "@noble/hashes": "^1.8.0",
    "bignumber.js": "9.1.2",
    "cbor": "^10.0.3",
    "esbuild-plugin-import-pattern": "^0.1.0",
    "esbuild-plugin-polyfill-node": "^0.3.0",
    "invariant": "^2.2.4"
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
    "@eslint/js": "^9.29.0",
    "@types/invariant": "^2.2.37",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.0.0",
    "bun": "^1.2.23",
    "esbuild": "^0.25.5",
    "esbuild-plugin-d.ts": "^1.3.1",
    "esbuild-plugin-wildcard-imports": "^0.0.15",
    "eslint": "^9.29.0",
    "globals": "^16.2.0",
    "glob": "^11.0.3",
    "jest": "^30.0.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
