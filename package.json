{
  "name": "@zondax/ledger-live-icp",
  "version": "1.0.0",
  "description": "ICP ledger live integration bridge library for Ledger Live",
  "files": [
    "dist"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./canisterIDL": {
      "import": "./dist/esm/canisterIDL.js",
      "require": "./dist/cjs/canisterIDL.js"
    },
    "./utils": {
      "import": "./dist/esm/utils/index.js",
      "require": "./dist/cjs/utils/index.js"
    },
    "./agent": {
      "import": "./dist/esm/agent.js",
      "require": "./dist/cjs/agent.js"
    },
    "./nns": {
      "import": "./dist/esm/nns.js",
      "require": "./dist/cjs/nns.js"
    },
    "./neurons": {
      "import": "./dist/esm/neurons/index.js",
      "require": "./dist/cjs/neurons/index.js"
    }
  },
  "scripts": {
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build": "pnpm clean && pnpm build:cjs && pnpm build:esm",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "test": "jest --passWithNoTests"
  },
  "keywords": [
    "icp",
    "ledger",
    "ledger-live"
  ],
  "author": "zondax",
  "license": "Apache-2.0",
  "dependencies": {
    "@dfinity/agent": "^2.4.1",
    "@dfinity/candid": "^2.4.1",
    "@dfinity/identity-secp256k1": "^2.4.1",
    "@dfinity/ledger-icp": "^2.6.13",
    "@dfinity/nns": "^8.4.1",
    "@dfinity/principal": "^2.4.1",
    "@dfinity/utils": "^2.13.0",
    "@noble/hashes": "^1.8.0",
    "bignumber.js": "9.1.2",
    "cbor": "^10.0.3",
    "invariant": "^2.2.4"
  },
  "devDependencies": {
    "ts-jest": "^29.4.0",
    "jest": "^30.0.0",
    "@types/invariant": "^2.2.37",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.0.3",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "@eslint/js": "^9.29.0",
    "eslint": "^9.29.0",
    "globals": "^16.2.0",
    "typescript-eslint": "^8.34.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
