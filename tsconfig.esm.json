// tsconfig.esm.json
{
  "extends": "./tsconfig.base.json", // Inherit common settings
  "compilerOptions": {
    "module": "ES2022", // Your original setting, suitable for ESM in Node.js
    "target": "ES2022",
    "outDir": "./dist/esm", // Output to a dedicated ESM directory
    "declarationDir": "./dist/esm" // Place declaration files with ESM output
  }
}
